{
  "name": "venmo-monorepo",
  "private": true,
  "scripts": {
    "build": "turbo build && pnpm run prisma:generate",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prisma:generate": "cd packages/prisma && pnpm dlx prisma generate && cd ../..",
    "start-user-app": "cd ./apps/user-app && pnpm start"
  },
  "devDependencies": {
    "@venmo/eslint-config": "workspace:*",
    "@venmo/typescript-config": "workspace:*",
    "prettier": "^3.2.5",
    "turbo": "^2.0.6",
    "typescript": "^5.4.5"
  },
  "packageManager": "pnpm@8.15.6",
  "engines": {
    "node": ">=18"
  }
}
